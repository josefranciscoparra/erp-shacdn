# Database
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth
NEXTAUTH_URL="https://tu-dominio.com"
NEXTAUTH_SECRET="genera-con: openssl rand -base64 32"

# App URL (para emails de invitación, reset password, etc.)
NEXT_PUBLIC_APP_URL="https://tu-dominio.com"

# Encryption
ENCRYPTION_KEY="genera-con: openssl rand -hex 16"

# Email Domain Enforcement (Multi-tenant)
# Activa la validación de dominios de email corporativos por organización
# true = Solo permitir emails con dominios configurados en cada organización
# false = Permitir cualquier email (útil para empresas pequeñas sin dominio propio)
# IMPORTANTE: Usar NEXT_PUBLIC_ para que funcione en cliente y servidor
NEXT_PUBLIC_ENFORCE_ORGANIZATION_EMAIL_DOMAINS="true"

# Security - Sensitive Data Access
# Requiere confirmación de contraseña para ver datos sensibles (IBAN, salario, etc.)
# true = Usuario debe introducir contraseña cada vez (sesión de 30 minutos)
# false = Solo botón mostrar/ocultar, sin contraseña requerida
# IMPORTANTE: Todos los accesos a datos sensibles se registran en log de auditoría independientemente de este valor
NEXT_PUBLIC_REQUIRE_PASSWORD_FOR_IBAN="true"

# Redis (Upstash) - Opcional por ahora
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Storage provider
STORAGE_PROVIDER="r2"

# Cloudflare R2
R2_ACCOUNT_ID="tu-account-id"
R2_ACCESS_KEY_ID="tu-access-key"
R2_SECRET_ACCESS_KEY="tu-secret-key"
R2_BUCKET="nombre-bucket"
R2_ENDPOINT="https://account-id.r2.cloudflarestorage.com"
R2_PUBLIC_URL=""

# Azure Storage (opcional si usas Azure Blob)
AZURE_STORAGE_CONNECTION_STRING=""
AZURE_CONTAINER_PREFIX="documents"

# Email (Resend)
# Proveedor de email transaccional para notificaciones, invitaciones, reset password, etc.
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="no-reply@mail.timenow.cloud"
# true = envía emails, false = desactiva envíos (útil en DEV)
EMAIL_SEND_ENABLED="true"
# Retraso minimo entre invitaciones de importacion (ms). Valores < 2000 se ignoran.
EMPLOYEE_INVITE_MIN_DELAY_MS="2000"

# Overtime Scheduler (master switch)
# true = activa el cron interno de reconciliación semanal
# false = desactiva el cron (aunque la UI esté activada)
OVERTIME_RECONCILIATION_ENABLED="true"
# Time tracking sweep (master switch)
TIME_TRACKING_SWEEP_ENABLED="true"

# Monitoring - Opcional
SENTRY_DSN=""

# Environment
NODE_ENV="production"
