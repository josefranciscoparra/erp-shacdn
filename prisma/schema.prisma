  positions Position[]

  @@unique([orgId, name]) // No duplicar niveles en la misma organizaci√≥n
  @@unique([orgId, order]) // No duplicar orden en la misma organizaci√≥n
  @@index([orgId])
  @@index([order])
  @@map("position_levels")
}

// Posici√≥n/Puesto de trabajo
