  @@index([managerId])
  @@map("departments")
}

// Nivel de puesto - Jerarqu√≠a organizacional
model PositionLevel {
  id          String  @id @default(cuid())
  name        String // "Junior", "Mid", "Senior", "Lead", "Principal"
  code        String? // C√≥digo interno opcional (ej: "L1", "L2", "L3")
